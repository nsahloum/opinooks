$( document ).ready(function() {
<% if current_user.voted_down_on? @debat %>
   $('.doc-<%= @debat.id %>').css('color', '#ff7743');
   $('.upc-<%= @debat.id %>').css('color', '#9696A0');
<% end %>
});


$('.dislike-<%= @debat.id %>').bind('ajax:success', function() {

   $('.up-<%= @debat.id %>').text(<%= @debat.get_upvotes.size%>);
   $('.down-<%= @debat.id %>').text(<%= @debat.get_downvotes.size%>);

});
